@model Gomsle.App.Features.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<form asp-controller="account" asp-action="register" asp-route-returnUrl="@ViewData["returnUrl"]" method="post" role="form">
    @Html.ValidationSummary(true)
    <fieldset>
        <div>
            <svg focusable="false" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10h5v-2h-5c-4.34 0-8-3.66-8-8s3.66-8 8-8 8 3.66 8 8v1.43c0 .79-.71 1.57-1.5 1.57s-1.5-.78-1.5-1.57V12c0-2.76-2.24-5-5-5s-5 2.24-5 5 2.24 5 5 5c1.38 0 2.64-.56 3.54-1.47.65.89 1.77 1.47 2.96 1.47 1.97 0 3.5-1.6 3.5-3.57V12c0-5.52-4.48-10-10-10zm0 13c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3z"></path></svg>
            @if (@Model?.EmailIsReadOnly == true)
            {
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { placeholder = "Email", disabled = true, id = "DummyEmail" } })
                @Html.HiddenFor(x => x.Email)
            }
            else
            {
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { placeholder = "Email" } })
            }
        </div>
        @Html.ValidationMessageFor(x => x.Email)
    </fieldset>
    <fieldset>
        <div>
            <svg focusable="false" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 17c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm6-9h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6h1.9c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm0 12H6V10h12v10z"></path></svg>
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { placeholder = "Password" } })
        </div>
        @Html.ValidationMessageFor(x => x.Password)
    </fieldset>
    <fieldset>
        <div>
            <svg focusable="false" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 17c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm6-9h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6h1.9c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm0 12H6V10h12v10z"></path></svg>
            @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { placeholder = "Confirm Password" } })
        </div>
        @Html.ValidationMessageFor(x => x.ConfirmPassword)
    </fieldset>
    <fieldset>
        <button type="submit">Register</button>
    </fieldset>
    <div class="actions">
        <div>Already have an account? @Html.ActionLink("Login", "login", "account")</div>
    </div>
    @Html.HiddenFor(x => x.EmailIsReadOnly)
    @Html.AntiForgeryToken()
</form>